extends layout

block content
    div(id='header')
        h1 #{title}
        div(id="ssnDiv")
                p #{ssn}
    #login
        // /ADD USER
    div.top(id='searchConsultationContainer')
        form.form-horizontal(method="post", id="loginForm")
            input.btn(id = "submitBtn" , type="submit", value="Search", class='btn btn-primary')
            input.span3(class='form-control', id="searchInput", type="text", name="User", placeholder="Search for a consultation")
    div.container(id='tableContainer')
        div.content
            table.table.table-hover.table-bordered(id="userInfoTable")
                thead(id='tableHead', class='active')
                    tr
                        th Date
                        th Place
                tbody(id='tableBody')
                    tr
    div.footer
    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User search:
            input#search(type='text',placeholder='SSN')
            button#searchBtn Get files
            div#list
            p
                strong SSN:
                |  <span id='userssn'></span>
                br
                strong Click to listen:
                #pathlist
        // /USER INFO
        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th Path
                    th Delete?
                tbody
        // /USER LIST

        // /ADD USER
        #addUser
            fieldset
                input#inputSSN(type='text',placeholder='ssn')
                input#inputEmail(type='text', placeholder='email')
                br
                input#inputName(type='text' , placeholder='Name')
                input#inputPath(type='text' , placeholder='Path')
                br
                button#addUserBtn Add User
                button#modifyUserBtn Modify User

    // /WRAPPER