extends layout

block content
  h1= title
  p Welcome to our test

  // Wrapper
  #wrapper

    // USER INFO
    #userInfo
      h2 User search:
      input#search(type='text',placeholder='SSN')
      button#searchBtn Get files
      div#list
      p
        strong SSN:
        |  <span id='userssn'></span>
        br
        strong Paths:
        #pathlist
    // /USER INFO
    // USER LIST
    h2 User List
    #userList
      table
        thead
          th Path
          th Delete?
        tbody
    // /USER LIST

    // /ADD USER
    #addUser
      fieldset
        input#inputSSN(type='text',placeholder='ssn')
        input#inputEmail(type='text', placeholder='email')
        br
        input#inputName(type='text' , placeholder='Name')
        input#inputPath(type='text' , placeholder='Path')
        br
        button#addUserBtn Add User
        button#modifyUserBtn Modify User

        // /ADD USER

    // /WRAPPER